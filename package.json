{
	"name": "movie-app",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"lint": "eslint \"src/**/*.{js,jsx}\"",
		"lint:fix": "eslint \"src/**/*.{js,jsx}\" --fix",
		"format": "prettier --write \"src/**/*.{js,jsx,json,html,scss}\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
